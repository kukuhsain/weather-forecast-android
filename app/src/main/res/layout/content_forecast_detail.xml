<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="72dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kukuhsain.kukuh.weather_forecast_android.ForecastDetailActivity"
    tools:showIn="@layout/activity_forecast_detail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City of London, GB"
        android:textSize="16sp"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rain"
        android:textSize="16sp"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light Rain"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Wind -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="52 m/sec"
        android:textSize="16sp"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind speed"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Cloudiness -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 %"
        android:textSize="16sp"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cloudiness"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Pressure -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.2 hPa"
        android:textSize="16sp"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pressure"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Humidity -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 %"
        android:textSize="16sp"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humudity"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Min Max Temp -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12C - 20C"
        android:textSize="16sp"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Range of temperature"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Temperature -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12C, 23C, 13C, 14C"
        android:textSize="16sp"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Morning, Day, Evening, Night Temperature"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Humidity -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[-0.09, 51.51]"
        android:textSize="16sp"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geo coords"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"/>

</LinearLayout>
